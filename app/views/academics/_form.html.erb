<div class="main_board center-align row">
    <div class="title board_item text  block ">
      
      <div class="row">
        <div class="input-field col s12">
          <h4 style="color: #8f8f8f !important; font-weight: normal;">Academics</h4>
        </div>
      </div>


      <% @done_opt = ['Nao_Concluido','Concluido']%>
      
      <%= form_with model: @academic, local: true do |f| %>

        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :institution,  class:"validate input_field", placeholder:"School" %>
            <%= f.label :institution, "Instituição:"%>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :course,  class:"validate input_field", placeholder:"Direito" %>
            <%= f.label :course, "Curso:"%>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.date_field :start_date,  class:"datepicker validate input_field" %>
            <%= f.label :start_date, "Início:"%>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.date_field :end_date,  class:"datepicker validate input_field" %>
            <%= f.label :end_date, "Fim:"%>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.select(:done, @done_opt, { }, { :style => 'display: block !important;' }) %>

            
          </div>
        </div>


        <div class="row">
          <div class="input-field col s12">
            <%= f.submit "Save", class:"waves-effect waves-light btn-small amber darken-2 white-text"%>
          </div>
        </div>

      <% end %>


    </div>
</div>