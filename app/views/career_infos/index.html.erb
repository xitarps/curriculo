<div class="main_board center-align row">
  <div class="title board_item text  block ">
    
      <a href="<%= root_path %>" style="text-decoration: none !important; color: #8f8f8f6c !important; font-weight: normal; margin: 0; padding: 0">Return</a>
      <% if logged_in?%>
        <a href="<%= new_career_info_path %>" style="text-decoration: none !important; color: #8f8f8f6c !important; font-weight: normal; margin: 0; padding: 0">New</a>
      <% end %>
    
    <div class="row">
      <div class="input-field col s12">
        <h4 class="h4" style="margin: 0 !important;">Experiência profissional</h4>
      </div>
    </div>

    <div class="info_board center-align row"></div>

    <% @colors= ['indigo', 'grey']%>
    <% @index = 0 %>

    
        <% @career_infos.each do |career_info| %>

          <div class="title board_item text text_greeting block <%= (@index.even?)? @colors[0] : @colors[1]%> darken-4" style="padding: 0.5em !important">
  
            <ul style="padding: 0 !important; margin: 0 !important;">
              <li>
                  <%= career_info.company %>
              </li>
              <hr/>
              <li>
                <%= career_info.work_function %>
              </li>
              <li>
                Início: <%= career_info.start_date.month %>/<%= career_info.start_date.year %>
                <% unless career_info.end_date.nil?%>
                - Fim: <%= career_info.end_date.month %>/<%= career_info.end_date.year %>
                <% else %>

                <% end %>
            </li>
              <li>
                <%= link_to  "Detalhes", career_info_path(career_info), style: 'text-decoration: none !important; color: dark-grey !important; font-weight: normal; margin: 0; padding: 0'  %>
              </li>
              <% if logged_in?%>
                <li>
                  <%= link_to  "Edit", edit_career_info_path(career_info), style: 'text-decoration: none !important; color: black !important; font-weight: normal; margin: 0; padding: 0'  %>
                  <%= link_to  "Delete", career_info_path(career_info), method: :delete, style: 'text-decoration: none !important; color: red !important; font-weight: normal; margin: 0; padding: 0' %>
                </li>
              <% end %>
            </ul>
          </div>
          </p>


        <% end %>


    </div>
    

  </div>
</div>