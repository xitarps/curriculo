<div class="main_board center-align row">
    <div class="title board_item text  block ">
      
      <%= link_to  "Back", root_path, style:"color: #8f8f8f6c !important; font-weight: normal; margin: 0; padding: 0" %>

      <div class="row">
        <div class="input-field col s12">
          <h4 style="color: #8f8f8f !important; font-weight: normal;">Sign In</h4>
        </div>
      </div>

      <%= form_with model: @user, url: signin_path, local: true do |f| %>

        <div class="row">
          <div class="input-field col s12">
            
            <%= f.text_field :email,  class:"validate input_field", placeholder:"example@example.com" %>
            <%= f.label :email, "Email:"%>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field :password,  class:"validate input_field", placeholder:"******" %>
            <%= f.label :password, "Password:"%>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.submit "Login", class:"waves-effect waves-light btn-small amber darken-2 white-text"%>
          </div>
        </div>

      <% end %>




      
      

    </div>
</div>