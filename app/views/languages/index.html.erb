<div class="main_board center-align row">
    <div class="title board_item text  block ">
      
        <a href="<%= root_path %>" style="text-decoration: none !important; color: #8f8f8f6c !important; font-weight: normal; margin: 0; padding: 0">Return</a>
        <% if logged_in?%>
          <a href="<%= new_language_path %>" style="text-decoration: none !important; color: #8f8f8f6c !important; font-weight: normal; margin: 0; padding: 0">New</a>
        <% end %>
      
      <div class="row">
        <div class="input-field col s12">
          <h4 class="h4" style="margin: 0 !important;">Languages</h4>
        </div>
      </div>

      <div class="info_board center-align row"></div>


      <% @languages.each do |language| %>

        <div class="title board_item text text_greeting block indigo darken-4" style="padding: 0.5em !important;">
        
          <ul style="padding: 0 !important; margin: 0 !important;">
            <li>
              <%= language.institution %>
            </li>
            <li>
              <%= language.language %>
            </li>
            <li>
              In√≠cio: <%= language.start_date.month %>/<%= language.start_date.year %>
              
               - Fim: <%= language.end_date.month %>/<%= language.end_date.year %>
            </li>
            <li>
              <%= language.level %>
            </li>
            <% if logged_in?%>
              <li>
                <%= link_to  "Edit", edit_language_path(language), style: 'text-decoration: none !important; color: black !important; font-weight: normal; margin: 0; padding: 0'  %>
                <%= link_to  "Delete", language_path(language), method: :delete, style: 'text-decoration: none !important; color: red !important; font-weight: normal; margin: 0; padding: 0' %>
              </li>
            <% end %>
          </ul>
        </div>
        </p>
      <% end %>


      </div>
      

    </div>
</div>